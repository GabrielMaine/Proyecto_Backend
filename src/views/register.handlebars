<div class='registerPage'>
    <div class='registerContainer'>
        <h1 class='registerTitle'>Registro</h1>
        <div class='formContainer'>
            <form id='registerForm'>
                <div class='row form-row'>
                    <div class='form-group col-md-6'>
                        <label for='nombre'>Nombre/s</label>
                        <input
                            required
                            type='text'
                            class='form-control'
                            name='first_name'
                            id='nombre'
                            placeholder='Nombre/s'
                        />
                    </div>
                    <div class='form-group col-md-6'>
                        <label for='apellido'>Apellido</label>
                        <input
                            required
                            type='text'
                            class='form-control'
                            name='last_name'
                            id='apellido'
                            placeholder='Apellido'
                        />
                    </div>
                </div>
                <div class='row form-row'>
                    <div class='form-group col-md-12'>
                        <label for='email'>Email</label>
                        <input required type='email' class='form-control' name='email' id='email' placeholder='Email' />
                    </div>
                </div>
                <div class='row form-row'>
                    <div class='form-group col-md-12'>
                        <label for='password'>Contraseña</label>
                        <input
                            required
                            type='password'
                            class='form-control'
                            name='password'
                            id='password'
                            placeholder='Contraseña'
                        />
                    </div>
                </div>
                <div class='row form-row'>
                    <div class='form-group col-md-2'>
                        <label for='age'>Edad</label>
                        <input
                            required
                            type='number'
                            class='form-control'
                            name='age'
                            id='age'
                            min='1'
                            placeholder='Edad'
                        />
                    </div>
                </div>
                <div class='row form-row'>
                    <div class='form-group col-md-12'>
                        <div class='form-check'>
                            <input required class='form-check-input' type='checkbox' id='gridCheck' />
                            <label class='form-check-label' for='gridCheck'>
                                Acepto los terminos y condiciones
                            </label>
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <div class='col-md-3'>
                        <input class='submitInput' type='submit' value='Registrame' />
                    </div>
                </div>
            </form>
        </div>
        <span class='registerText'> ¿Ya estas registrado? <a href=' /login'>Inicia sesión aqui!</a></span>
    </div>

</div>

<script src='/js/register.js'></script>