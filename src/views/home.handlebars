<div>
    <h1>Lista de productos</h1>
    <div id='userRender'>
        <h2>¡Bienvenido {{user.name}}!</h2>
        <li>Email: {{user.email}}</li>
        <li>Edad: {{user.age}}</li>
        <li>Rol: {{user.role}}</li>
        <a href="/logout"><button>Cerrar sesión</button></a>
        <a href="/"><button>Ver perfil</button></a>
    </div>
    <div id='pageRender'>
        <h2>Página <span id='currentPage'>{{results.page}}</span> de {{results.totalPages}}</h2>
        {{#each results.payload}}
            <div>
                <span>Producto:{{this.title}}</span><br />
                <span>ID:{{this._id}}</span><br />
                <span>Precio:{{this.price}}</span><br />
                <span>Descripcion:{{this.description}}</span><br />
                <button>Agregar al carrito</button><hr />
            </div>
        {{/each}}

        {{#if results.hasPrevPage}}
            <button onclick='return prevPage(this)'>Pagina anterior</button>
        {{/if}}

        {{#if results.hasNextPage}}
            <button onclick='return nextPage(this)'>Pagina siguiente</button>
        {{/if}}

    </div>
</div>

<script src='/socket.io/socket.io.js'></script>
<script src='/js/home.js'></script>